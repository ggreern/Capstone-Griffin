@page
@model Capstone.Pages.Profile.IndexModel

<h2>Profile</h2>

@if (Model.CurrentUser != null)
{
    <!-- Profile Image Placeholder -->
    <div style="width: 100px; height: 100px; border-radius: 50%; background-color: #ddd; margin-bottom: 20px;">
        
    </div>

    <form method="post" enctype="multipart/form-data" asp-action="UploadImage">
        <input type="file" name="profileImage" accept="image/*" />
        <button type="submit">Upload Image</button>
    </form>

    <p>Username: @Model.CurrentUser.Username</p>
    <p>Name: @Model.CurrentUser.FirstName @Model.CurrentUser.LastName</p>
    <p>Email: @Model.CurrentUser.Email</p>
    <p>Phone: @Model.CurrentUser.PhoneNumber</p>
}
else
{
    <p>User details not found.</p>
}
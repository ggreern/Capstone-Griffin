@page
@model Capstone.Pages.Events.AddEventModel
@{
}

<form>
    <h1>Enter Event Information and Request Approval</h1>
    <!-- Display UserID -->
    <p>User ID: @Model.NewEvent.OrganizerID</p>
</form>

<form asp-page="AddEvent">
    <input type="text" asp-for="NewEvent.Name" placeholder="Event Name" />
    <input type="text" asp-for="NewEvent.Address" placeholder="Address" />
    <input type="text" asp-for="NewEvent.RegistrationCost" placeholder="Registration Cost" />
    <input type="text" asp-for="NewEvent.EstimatedAttendance" placeholder="Estimated Attendance" />
    <input type="text" asp-for="NewEvent.StartDate" placeholder="Start Date" />
    <input type="text" asp-for="NewEvent.EndDate" placeholder="End Date" />
    <input type="text" asp-for="NewEvent.EventType" placeholder="Event Type" />
    <input type="text" asp-for="NewEvent.Description" placeholder="Description" />

    <button type="submit">Go to Event Approval</button>
    <button type="button" onclick="populateForm()">Populate</button>
</form>

<script>
    function populateForm() {
        var predefinedValues = {
            Name: "Sample Event",
            Address: "123 Main Street",
            RegistrationCost: "50",
            EstimatedAttendance: "100",
            StartDate: "2023-01-01",
            EndDate: "2023-01-03",
            EventType: "Conference",
            Description: "This is a sample event."
        };

        Object.keys(predefinedValues).forEach(function (key) {
            var inputField = document.querySelector('[name="NewEvent.' + key + '"]');
            if (inputField) {
                inputField.value = predefinedValues[key];
            }
        });
    }
</script>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Capstone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Capstone.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <h1 class="logo">HOST</h1>

            <ul class="search">
                <li><input type="search" placeholder="Search..."></li>
            </ul>

            <ul class="rightbar">
                <li>Profile</li>
                <li><a href="/logout">Logout</a></li>

            </ul>
        </nav>
    </header>

 
        <div class="sidebar">
            <div class="side-nav">
                <ul>
                    <li><a href="/Menu">Home</a></li>
                    <li><a href="/Events/Index">Events</li>
                   <li><a href="/Events/SendEmail">Send Email</a></li>
                <li> <a href="/Profile/Index">Profile</a></li>
                
                <li> <a href="/Events/EventSignUp">Sign Up For an Event</a></li>
                @{
                    if (ViewData["userType"] != null && ViewData["userType"] == "Admin")
                    {
                        <li> <a href="AdminPage/AdminDashboard">Event Approval</a></li>
                    }
                }
                <li> <a href="/AdminPage/AdminDashboard">Admin Page</a></li>



                </ul>
            </div>
        </div>
   

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
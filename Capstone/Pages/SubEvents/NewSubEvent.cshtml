@model Capstone.Pages.Subevents.NewSubEventModel
@{
}

 <form method="post">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" asp-for= "Subevent.Name" class="form-control" id="Name" name="Name" placeholder="Enter subevent name">
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <textarea asp-for="Subevent.Description" class="form-control" id="Description" name="Description" placeholder="Enter description"></textarea>
        </div>

        <div class="form-group">
            <label for="SubEventType">Sub Event Type</label>
            <input asp-for="Subevent.SubEventType" type="text" class="form-control" id="SubEventType" name="SubEventType" placeholder="Enter sub event type">
        </div>

        <div class="form-group">
            <label for="EstimatedAttendance">Estimated Attendance</label>
            <input asp-for="Subevent.EstimatedAttendance"type="number" class="form-control" id="EstimatedAttendance" name="EstimatedAttendance" placeholder="Enter estimated attendance">
        </div>

        <div class="form-group">
            <label for="Host">Host</label>
            <input type="number" class="form-control" id="Host" name="Host" placeholder="Enter Host Name">
        </div>

    <div class="form-group">
        <label for="Guest">Guest</label>
        <input type="number" class="form-control" id="Guest" name="Guest" placeholder="Enter Guest Name">
    </div>

        <button type="submit" class="btn btn-primary">Submit</button>
 </form>

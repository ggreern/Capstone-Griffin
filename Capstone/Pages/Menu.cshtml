@page
@model MenuModel
@{
    ViewData["Title"] = "Home Page";
  
}

<link href="~/css/custom.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row">
      
        <!-- Main section -->
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <!-- My Upcoming Events Section -->
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">My Upcoming Events</h1>
            </div>
            <div class="row">
                @foreach (var ev in Model.UpcomingEvents)
                {
                    <div class="col-12 col-lg-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@ev.Name</h5>
                                <p class="card-text">@ev.Description</p>
                                <p class="card-text">@ev.StartDate - @ev.EndDate</p>
                                <!-- Add more details as needed -->
                            </div>
                        </div>
                    </div>
                }
            </div>

           
        </main>
    </div>
</div>

<script src="~/js/site.js"></script>
<script>
    
</script>

<form asp-page="DBLogin" asp-page-handler="LogoutHandler">
    <input type="submit" class="btn btn-danger" value="logout">
</form>


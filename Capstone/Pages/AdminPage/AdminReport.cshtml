@page
@model Capstone.Pages.AdminPage.AdminReportModel
@{
}

<h2>User Report</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Username</th>
            <th>User Type</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AdminReportData)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Username</td>
                <td>@item.UserType</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.UserID" onsubmit="return confirm('Are you sure you want to delete this user?')">
                        <button type="submit" class="btn btn-danger">Delete User</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
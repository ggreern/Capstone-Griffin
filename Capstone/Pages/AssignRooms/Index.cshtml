@page
@model Capstone.Pages.AssignRooms.IndexModel
<h2>Assign Rooms</h2>

<link href="css/custom.css" rel="stylesheet" />

<form method="post" asp-action="AssignRoom">
    <label for="event">Select Event:</label>
    <select asp-for="SelectedEventId" asp-items="Model.Events">
        <option value="">-- Select an Event --</option>
    </select>

    @if (Model.SuggestedRooms != null && Model.SuggestedRooms.Any())
    {
        <h3>Suggested Rooms</h3>
        <table>
            <tr>
                <th>Room Name</th>
                <th>Capacity</th>
                <th>Select</th>
            </tr>
            @foreach (var room in Model.SuggestedRooms)
            {
                <tr>
                    <td>@room.Name</td>
                    <td>@room.Capacity</td>
                    <td>
                        <input type="radio" name="SelectedRoomId" value="@room.RoomID" />
                    </td>
                </tr>
            }
        </table>
    }

    <button type="submit" class="btn btn-success">Select Room</button>
</form>
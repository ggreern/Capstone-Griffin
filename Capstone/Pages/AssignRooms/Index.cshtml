@page
@model Capstone.Pages.AssignRooms.IndexModel
<h2>Assign Rooms</h2>

<link href="css/custom.css" rel="stylesheet" />

<form method="post">
    <label for="event">Select Event:</label>
    <select asp-for="SelectedEventId" asp-items="Model.Events">
        <option value="">-- Select an Event --</option>
    </select>
    <button type="submit" class="btnstyle btn btn-primary">Create SubEvents</button>
</form>

@if (Model.SuggestedRooms != null)
{
    <h3>Suggested Rooms</h3>
    <ul>
        @foreach (var room in Model.SuggestedRooms)
        {
            <li>@room.Name - Capacity: @room.Capacity</li>
        }
    </ul>
}